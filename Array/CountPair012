#include<iostream>
using namespace std;

int main(){

    cout<<"Enter the size of an array";
    int n;
    cin>>n;
    // int arrnew[n];
    int arr[n];
    cout<<"Enter the value of an array"<<endl;
    for (int k = 0; k < n; k++)
    {
        cin>>arr[k];
    }

    int size=sizeof(arr)/sizeof(arr[0]);
     
    int arr1[3]={0};
    for (int i = 0; i < n; i++)
    {
        if(arr[i]==0){
            arr1[0]=arr1[0]+1;
        }
        else if (arr[i]==1)
        {
            arr1[1]=arr1[1]+1;
        }
        else{
            arr1[2]=arr1[2]+1;
        }
        
    }
    for (int i = 0; i < 3; i++)
    {
        cout<<arr1[i]<<endl;
    }
    int total_number=0;
    for (int i = 0; i < 3; i++)
    {
        total_number=total_number+arr1[i];
    }
    int arr_print[total_number]={0};

    for (int i = 0; i <= arr1[0]; i++)
    {
        arr_print[i]=0;
    }
    for (int i = arr1[0]; i <= (arr1[0]+arr1[1]-1); i++)
    {
        arr_print[i]=1;
    }
    for (int i = arr1[0]+arr1[1]; i <= (arr1[0]+arr1[1]+arr1[2]-1); i++)
    {
        arr_print[i]=2;
    }
    
    for (int i = 0; i < total_number; i++)
    {
        cout<<arr_print[i]<<" ";
    }
    
    
    
    return 0;
}


